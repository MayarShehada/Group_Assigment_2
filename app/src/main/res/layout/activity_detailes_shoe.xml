<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/node"
    tools:context=".Activities.DetailesShoeActivity">

    <Button
        android:id="@+id/cart_list"
        android:layout_width="76dp"
        android:layout_height="53dp"
        android:background="#00FFFFFF"
        android:drawableLeft="@drawable/ic_baseline_shopping_cart_24"
        android:foreground="?android:selectableItemBackground"
        android:onClick="cartBtnAction"
        android:textSize="30sp"
        app:backgroundTint="#00FFFFFF"
        app:iconTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.016" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="70dp"
        android:layout_height="56dp"
        android:background="#00FFFFFF"
        android:drawableLeft="@drawable/back"
        android:foreground="?android:selectableItemBackground"
        android:onClick="backBtnAction"
        android:textSize="30sp"
        app:backgroundTint="#00FFFFFF"
        app:iconTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.016" />

    <TextView
        android:id="@+id/name_txt"
        android:layout_width="225dp"
        android:layout_height="54dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.016" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="361dp"
        android:layout_height="435dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shapes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_img" />

    <Button
        android:id="@+id/calculate_bill_btn"
        android:layout_width="212dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:onClick="add_to_cartOnClick"
        android:text="@string/add_to_cart"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#CCC6C6"
        app:iconTint="#5A5858"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/brand_txt"
        android:layout_width="323dp"
        android:layout_height="64dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/brand"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.614"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.472" />

    <TextView
        android:id="@+id/total_txt"
        android:layout_width="314dp"
        android:layout_height="51dp"
        android:layout_marginStart="52dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textColor="#FF0000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571" />

    <ImageView
        android:id="@+id/photo_img"
        android:layout_width="246dp"
        android:layout_height="225dp"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <Spinner
        android:id="@+id/color_spinner"
        android:layout_width="186dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.806"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.738" />

    <Spinner
        android:id="@+id/size_spinner"
        android:layout_width="186dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.806"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.658" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="109dp"
        android:layout_height="40dp"
        android:layout_marginStart="52dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Size"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.657" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="109dp"
        android:layout_height="40dp"
        android:layout_marginStart="52dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Color"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.739" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="109dp"
        android:layout_height="40dp"
        android:layout_marginStart="52dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Rate"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.828" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="203dp"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:paddingRight="5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.834">

        <TextView
            android:id="@+id/rate1"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/black_star" />

        <TextView
            android:id="@+id/rate2"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/black_star" />

        <TextView
            android:id="@+id/rate3"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/black_star" />

        <TextView
            android:id="@+id/rate4"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/black_star" />

        <TextView
            android:id="@+id/rate5"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/black_star" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>